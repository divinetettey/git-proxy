{
  "include": [
    "packages/*/src",
    "plugins/*/src"
  ],
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES2021",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "strict": true,
    "skipLibCheck": true
  }
}
